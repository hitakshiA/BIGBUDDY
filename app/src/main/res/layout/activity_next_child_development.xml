<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E0F7FA">

    <TextView
        android:id="@+id/nextChildDevelopmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Child Development Progress"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:padding="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track your childâ€™s progress based on age-specific skills."
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnProceedToLiveSessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to Live Sessions"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"/>
</LinearLayout>
