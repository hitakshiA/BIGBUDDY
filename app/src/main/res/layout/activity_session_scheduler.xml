<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E1F5FE">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Your Session"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:padding="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Time Slot"
        android:textSize="18sp"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btnSelectTimeSlot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Slot 1: 10:00 AM - 11:00 AM"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"/>


    <Button
        android:id="@+id/btnSelectTimeSlot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Slot 2: 2:00 PM - 3:00 PM"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"/>

    <!-- Confirm Session Button -->
    <Button
        android:id="@+id/btnConfirmSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Session"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"/>


    <Button
        android:id="@+id/btnBackToLiveSessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"/>
</LinearLayout>
