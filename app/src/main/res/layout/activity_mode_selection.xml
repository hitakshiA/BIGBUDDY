<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/background">

    <!-- Motivational Heading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock your potential with the right guidance!"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#FF9800"
    android:layout_marginBottom="20dp" />

    <!-- Counseling Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counseling and Advice"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnCounseling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Counseling"
        android:backgroundTint="#C47CD1"
        android:textColor="#FFFFFF" />

    <!-- Mentorship Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mentorship for Students"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
       android:layout_marginTop="20dp"
       android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnMentorship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Mentorship"
        android:backgroundTint="#C47CD1"
        android:textColor="#FFFFFF" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Child Development"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnChildDevelopment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Child Development"
        android:backgroundTint="#C47CD1"
        android:textColor="#FFFFFF" />

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#607D8B"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginStart="16dp"
            android:backgroundTint="#607D8B"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
